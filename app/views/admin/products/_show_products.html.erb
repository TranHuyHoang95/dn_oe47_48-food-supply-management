<% provide(:title, t("admin.product.title")) %>
<div class="container">
  <h3 class="center_custome"><%= t "admin.product.title" %></h3>
  <div class="row">
    <div class="col-lg-12 col-md-6">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col"><%= t "admin.product.name" %></th>
            <th scope="col"><%= t "admin.product.image" %></th>
            <th scope="col"><%= t "admin.product.description" %></th>
            <th scope="col"><%= t "admin.product.price" %></th>
            <th scope="col"><%= t "admin.product.quantity" %></th>
            <th scope="col" class="text_center"><%= t "admin.product.action" %></th>
          </tr>
        </thead>

        <tbody>
          <%= render(@products) || t("admin.product.nil") %>
        </tbody>
      </table>
      <div class="center">
        <%= paginate @products, remote: true %>
      </div>
    </div>
  </div>
</div>
